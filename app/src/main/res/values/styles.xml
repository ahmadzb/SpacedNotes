    <style name="AppTheme.LightGreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNamedLightGreen</item>
        <item name="colorPrimaryDark">@color/colorNamedLightGreenDark</item>
        <item name="colorAccent">@color/colorNamedLightBlue</item>
    </style>

    <style name="AppTheme.Lime">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNamedLime</item>
        <item name="colorPrimaryDark">@color/colorNamedLimeDark</item>
        <item name="colorAccent">@color/colorNamedLightBlue</item>
    </style>

    <style name="AppTheme.Yellow">
        <!-- Customize your theme here. -->

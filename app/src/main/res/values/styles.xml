<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">#0389d4</item>
        <item name="colorAccent">#cddc39</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="AppTheme.Red">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNamedRed</item>
        <item name="colorPrimaryDark">@color/colorNamedRedDark</item>
        <item name="colorAccent">@color/colorNamedAmber</item>
    </style>

    <style name="AppTheme.Pink">
